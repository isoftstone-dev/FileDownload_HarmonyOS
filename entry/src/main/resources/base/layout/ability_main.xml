<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <ProgressBar
        ohos:id="$+id:progress"
        ohos:progress_width="10vp"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:max="100"
        ohos:min="0"
        ohos:progress="0"
        />
    <Button
        ohos:id="$+id:button1"
        ohos:width="350vp"
        ohos:height="30vp"
        ohos:text_size="15fp"
        ohos:text="下载"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"/>
    <Button
        ohos:id="$+id:button2"
        ohos:height="30vp"
        ohos:width="350vp"
        ohos:text_size="15fp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text="暂停"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"
        />
    <Button
        ohos:id="$+id:button3"
        ohos:height="30vp"
        ohos:width="350vp"
        ohos:text_size="15fp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text="继续"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"
        />
    <Button
        ohos:id="$+id:button6"
        ohos:height="30vp"
        ohos:width="350vp"
        ohos:text_size="15fp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text="多文件下载（开启线程池）"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"
        />
    <Button
        ohos:id="$+id:button4"
        ohos:height="30vp"
        ohos:width="350vp"
        ohos:text_size="15fp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text="单文件上传"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"
        />
    <Button
        ohos:id="$+id:button5"
        ohos:height="30vp"
        ohos:width="350vp"
        ohos:text_size="15fp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:text="多文件上传"
        ohos:text_color="#ffffff"
        ohos:top_margin="20vp"
        ohos:horizontal_center="true"
        />

</DirectionalLayout>